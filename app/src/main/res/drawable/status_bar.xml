<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape
            android:shape="rectangle">
            <solid android:color="@color/borders" />
            <corners android:bottomLeftRadius="3dip" android:bottomRightRadius="3dip"/>
            <padding android:top="-1dip"/>
        </shape>
    </item>

    <item android:bottom="2dip" android:left="2dip" android:right="2dip">
        <shape
            android:shape="rectangle">
            <solid android:color="@color/colorPrimaryDark" />
            <corners android:bottomLeftRadius="2dip" android:bottomRightRadius="2dip"/>
        </shape>
    </item>

</layer-list>
